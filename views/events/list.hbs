<article class="header">
  <img class="profile" src="{{user.imageUrl}}">
  <p>{{user.username}}</p>
</article>

<article id="events">

  <div id="owned-tab">
    <h2>My Events</h2>
  </div>

  <div id="participating-tab">
    <h2>Events I'm In</h2>
  </div>

  <div id="finished-tab">
    <h2>Finished Events</h2>
  </div>

</article>

<div class="show-events">

  <div class="container-list">

    <ul id="owned-events" class="show">
      {{#each events.owned}}
      <li>
        <div class="container-list event-list-images"
          style="background: url({{this.imageUrl}}) no-repeat center center / cover;">
          <a class="event-square-text" href="/events/{{this._id}}">{{this.name}}</a>
        </div>
      </li>
      {{/each}}
    </ul>

  </div>

  <div class="container-list">

    <ul id="participating-events" class="hide">
      {{#each events.participating}}
      <li>
        <div class="container-list event-list-images"
          style="background: url({{this.imageUrl}}) no-repeat center center / cover;">
          <a class="event-square-text" href="/events/{{this._id}}">{{this.name}}</a>
        </div>
      </li>
      {{/each}}
    </ul>

  </div>

  <div class="container-list">

    <ul id="finished-events" class="hide">
      {{#each events.finished}}
      <li>
        <div class="container-list event-list-images"
          style="background: url({{this.imageUrl}}) no-repeat center center / cover;">
          <a class="event-square-text" href="/events/{{this._id}}">{{this.name}}</a>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>

</div>

{{#if eventsSearched}}

<div class="searched-events border-box">
  <h2 class="search-title">Search results</h2>
  <div class="container-list">
    <ul class="searched-ul">
      {{#each eventsSearched}}
      <li>
        <div class="bg-searched container-list" style="background: url({{imageUrl}}) no-repeat center center / cover;">
          <a class="event-square-text" href="/events/{{_id}}">{{name}}</a>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
{{/if}}


<section class="events-background">
  <form class="search-event-form" action="/events/search-event" method="GET">
    <label for="event-search-input">Event Name: </label>
    <input type="search" name="name" id="event-search-input"></input>
    <button id="search-button-element" class="dbutton" type="submit">Search event</button>
  </form>

  <div class="list-new-button">
    <a class="dbutton" href="events/new">New Event</a>
  </div>
</section>


