<section class="header event">
  <h2>{{event.name}}</h2>
  {{#if event.imageUrl}}
  <img class="event-picture" src="{{event.imageUrl}}" alt="event image" />
  {{/if}}
  <i class="far fa-calendar-alt">
    <p class="date inline">{{event.date}}</p>
  </i>
</section>

<div class="event-description">
  <i class="fas fa-user-shield"></i>
  <h3 class="inline">{{event.owner.name}}</h3>
  <i id="map-icon" class="fas fa-map-marker-alt"></i>
  <p id="location" class="inline">{{event.location}}</p>
</div>
<div class="distance">
  <i class="fas fa-subway"></i><p class="inline"  id="distance-location"></p>
</div>


<div id="map" class="map-height-none">

</div>

<p class="description">{{event.description}}</p>

{{#if isCreator}}
<div class="add-buttons">
  <button class="add submit">Add items</button>
  <a class="add submit big" href="/people/{{event._id}}/list">Search people</a>
</div>

<form action="/events/add-item" method="POST" class="add-item" id="hide">
  <h3 class="h3-items">Item</h3>
  <div class="field">
    <input type="text" name="name" id="item-name" placeholder="What item?">
  </div>
  <div class="field">
    <input type="number" name="quantity" id="item-quantity" placeholder="How many?">
  </div>
  <input type="hidden" value="{{event._id}}" name="event">
  <div class="field">
    <button class="submit small-blue" type="submit">Add Item</button>
  </div>
</form>
{{/if}}

{{> flash}}

{{#if event.items}}

<ul class="event-items">
  <h3 class="item-list">Item List</h3>
  {{#each event.items}}
  {{#if this.status}}
  <div class="item-flex">
    <li>{{this.quantity}} {{this.name}}</li>
    <form action="/events/take-item" id="carry-form" method="POST">
      <input type="hidden" name="event" value="{{../event._id}}">
      <input type="number" name="quantity" value="1" placeholder="quantity">
      <input type="hidden" name="name" value="{{this.name}}">
      <button class="submit small-blue" type="submit">Carry Item</button>
    </form>
  </div>

  {{/if}}
  {{/each}}
</ul>
{{/if}}

<div class="attendees">
  <h3 class="attendees-h3"> <i class="fas fa-users"></i>attendees</h3>
  <ul class="event-attendees">
    {{#each event.attendees}}
    <li class="uninvite">{{this.username}}</li>
    {{#if isCreator}}
    <form class="uninvite" action="/people/delete-people" method="POST">
      <input type="hidden" value="{{../event._id}}" name="eventId">
      <input type="hidden" value="{{_id}}" name="guestId">
      <button class="submit remove small-blue" type="submit">Uninvite</button>
    </form>
    {{/if}}
    {{#each items}}
    <li class="hide">Item: {{itemName}}, Quantity carrying: {{quantity}}</li>
    {{/each}}
    {{/each}}
  </ul>
</div>

<p><a href="/events/{{event._id}}/send-email">Send an email to the attendees</a></p>

<div class="comments">    
  {{#if event.comments}} 
  {{#each event.comments}}
  <p><span class="comment-date">{{date}}</span>{{user}}: {{message}}</p> 
  {{/each}}
  {{/if}}
</div>
<div>
  <form action="/events/{{event._id}}/add-comment" method="POST" class="add-comment">
    <h3>Add a comment</h3>
    <div class="field">
      <input type="text-area" name="comment" id="comment-name" placeholder="Comment">      
    </div>
    <div class="field">
      <button class="submit small-blue" type="submit">Add Comment</button>
    </div>
</div>
</form>

<div class="remove-buttons">
  {{#if isCreator}}
  <form action="/events/delete-event" method="POST">
    <input type="hidden" name="event" value="{{event._id}}">
    <button class="leave submit big" type="submit">Delete Event</button>
  </form>

  {{else}}
  <form action="/people/leave-event" method="POST">
    <input type="hidden" value="{{event._id}}" name="id">
    <button class="big leave submit" type="submit">Leave event</button>
  </form>
  {{/if}}
</div>

<script src="https://momentjs.com/downloads/moment.min.js"></script>
<script src="/javascripts/form.js"></script>
<script src="/javascripts/carrying-list.js"></script>
<script src="/javascripts/date.js"></script>
